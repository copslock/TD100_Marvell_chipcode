<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="255px"
    android:layout_height="85px">
    
    <TextView
    	android:id="@+id/title_name"
        android:layout_width="fill_parent"
        android:layout_height="30px"
        android:layout_marginLeft="20px"
        android:text="@string/scan_wait"
        android:textSize="16sp"
		android:textColor="#ffffff"
        android:typeface="serif"
        android:textStyle="bold"
    />    
	
    <ProgressBar android:id="@+id/power_percent"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="230px"
        android:layout_height="15px"
        android:layout_marginLeft="11px"
        android:layout_marginRight="11px"
        android:layout_marginTop="15px"
        android:layout_marginBottom="10px"
        android:max="100"
        android:progress="50"/>
        
     <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="60px"
	    android:layout_marginTop="10px"
	    android:background="@drawable/common_worldclock_night">
	
    
	    <Button android:id="@+id/btn_scan_cancel"
	        android:layout_width="126px"
	        android:layout_height="46px"    
	        android:layout_marginTop="5px"
	        android:layout_marginLeft="65px"
	        android:text="@string/cancel"
	        android:textSize="16sp" 
	        android:gravity="center"
	    />
     </LinearLayout>        
       		
</LinearLayout>
