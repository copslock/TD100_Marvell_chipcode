<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"   
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">     
	<ImageView
		android:id="@+id/iv_crypt"
		android:layout_width="25px"
		android:layout_height="wrap_content" 
		android:layout_marginTop="25px"		
		android:layout_marginLeft="5px"
		android:src="@drawable/icon_encrpt">
    </ImageView>
      
	<TextView
		android:id="@+id/tv_channel"
		android:layout_toRightOf="@+id/iv_crypt"
		android:layout_width="wrap_content"		
		android:layout_height="35px" 
		android:paddingTop="5px"  
		android:gravity="center"
		android:layout_marginLeft="10px"
		android:textColor="#FFFFFF"
		android:textSize="19px">
	</TextView>
	
	<TextView
		android:id="@+id/tv_time"
		android:layout_below="@+id/tv_channel"
		android:layout_toRightOf="@+id/iv_crypt"
		android:layout_width="wrap_content"
		android:layout_height="30px"
		android:layout_marginLeft="10px"
		android:gravity="center"> 
	</TextView> 
            
	<TextView
		android:id="@+id/tv_program" 
		android:layout_toRightOf="@+id/tv_time" 
		android:layout_below="@+id/tv_channel"  
		android:layout_width="wrap_content"
		android:layout_height="30px"
		android:layout_marginLeft="25px"
		android:gravity="center_vertical"> 
	</TextView> 
	
	<ImageView
		android:id="@+id/iv_playing"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"		
		android:layout_marginRight="5px"
		android:src="@drawable/state_play"
		android:visibility="gone">
    </ImageView>
</RelativeLayout>