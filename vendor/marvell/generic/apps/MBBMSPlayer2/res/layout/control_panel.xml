<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="horizontal"
	android:background="@drawable/button_bg"
	android:gravity="center">
	
	<ImageButton android:id="@+id/ib_play"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:src="@drawable/play_button_bg"
		android:background="#00000000"
		android:visibility="gone"
		android:layout_weight="1">
	</ImageButton>
	
	<ImageButton android:id="@+id/ib_pause"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:src="@drawable/pause_button_bg" 
		android:background="#00000000"
		android:layout_weight="1">
	</ImageButton>
	
	<ImageButton android:id="@+id/ib_record"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:src="@drawable/record_button_bg" 
		android:background="#00000000"
		android:layout_weight="1">
	</ImageButton>
	
	<ImageButton android:id="@+id/ib_stop_record"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:src="@drawable/stop_record_bg" 
		android:background="#00000000"
		android:visibility="gone"
		android:layout_weight="1">
	</ImageButton>
	
	<ImageButton android:id="@+id/ib_capture"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:src="@drawable/capture_button_bg" 
		android:background="#00000000"
		android:layout_weight="1">
	</ImageButton>
	
	<ImageButton android:id="@+id/ib_noisy"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:src="@drawable/noisy_bg" 
		android:background="#00000000"
		android:layout_weight="1">
	</ImageButton>
	
	<ImageButton android:id="@+id/ib_silent"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:src="@drawable/silent_bg" 
		android:background="#00000000"
		android:layout_weight="1"
		android:visibility="gone">
	</ImageButton>

</LinearLayout>